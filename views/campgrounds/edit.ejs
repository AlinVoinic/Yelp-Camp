<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit campground <%= camp.title %>
        </h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" value="<%=camp.title%>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required
                        value="<%=camp.location%>">
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" name="campground[price]"
                            required aria-label="Username" aria-describedby="basic-addon1" value="<%=camp.price%>">
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" required
                        id="description"><%=camp.description%> </textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-control" id="image" name="image" multiple>
                    </div>
                </div>
                <h6>Delete Images: </h6>
                <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                    <% camp.images.forEach((img, i) => { %>
                    <div class="col">
                        <div class="card">
                            <label for="image-<%= i %>">
                                <img class="card-img" src="<%= img.thumbnail %>" alt="">
                                <div class="card-img-overlay text-end pt-1 pe-2">
                                    <input type="checkbox" class="form-check-input" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>" >
                                <!-- Valorile checkbox-urilor selectate vor intra in vectorul deleteImages[], pe care il accesam in updateCampground-->
                                </div>
                            </label>
                        </div>
                    </div>
                    <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update campground</button>
                </div>
            </form>
        </div>
    </div>

    <footer>
        <a href="/campgrounds/<%=camp._id%>">Abort update</a>
    </footer>